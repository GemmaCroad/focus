<h1>New Photo</h1>

<%= form_tag "/photos", multipart: true do %>
  <p>
    <%= label_tag "Photo Name: " %>
    <%= text_field_tag :name %>
  </p>

  <p>
    <%= label_tag "Photo Image: " %>
    <%= cl_image_upload_tag :file %>
  </p>	

  <p>
     <%= label_tag "Galleries: " %>
     <%= select_tag :gallery_id, options_for_select(Gallery.all.map { |gallery| [ gallery.name, gallery.id ] }),
		:include_blank => true %> 
  </p>

  <%= submit_tag "Add Photo" %>
<% end %>