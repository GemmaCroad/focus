<!DOCTYPE html>
<html>
<head>
  <title>FOCUS</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="container">
<nav>
  <div class="unlogged">
  <% if @current_user.present? %>
    <%= link_to "Logout #{ @current_user.name}", login_path, :method => 'delete', :data => { :confirm => 'Are you sure you wish to logout?' } %>
    <%= link_to 'Home', '/' %>
    <%= link_to 'Browse Photos', photos_path %>
    <%= link_to 'Add A New Photo', new_photo_path %>
    <%= link_to 'Browse Galleries', galleries_path %>
    <%= link_to 'Create Gallery', new_gallery_path %>
    <%= link_to 'Browse Users', users_path %>
    <%= link_to 'Edit Profile', edit_user_path(@current_user) %>
  </div>
  <% else %>
  <div class="unlogged">
    <%= link_to 'Sign Up', new_user_path %>
    <%= link_to 'Login', login_path %>
  </div>
  <% end %>
</nav>


<%= yield %>

</body>
</html>