<%= form_for @current_user do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %>

    <%= f.label :hometown %>
    <%= f.text_field :hometown %>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <%= f.label :bio %>
    <%= f.text_area :bio  %>

<%= f.submit %>

<% end %>