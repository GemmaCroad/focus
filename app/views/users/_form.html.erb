<%= form_for @current_user do |f| %>

<p>
    <%= f.label :name %>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :email %>
    <%= f.text_field :email %>
</p>    

<p>
    <%= f.label :hometown %>
    <%= f.text_field :hometown %>
</p>    

<p>
    <%= f.label :image %>
    <%= f.url_field :image %>
</p>    

<p>
    <%= f.label :bio %>
    <%= f.text_area :bio  %>
</p>    

<%= f.submit %>

<% end %>